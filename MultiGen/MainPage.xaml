        <TextBox x:Name="OffsetBox" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Margin="43,0,299,62" Width="170" TextChanged="OffsetBox_TextChanged" Grid.Column="1" PlaceholderText="Offset" InputScope="Number"/>

    </Grid>
